package NewPackage;

import java.util.Scanner;

public class Exercici4_10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		int intents = 1;
		int i = 0;
		final int NOMBRE_SECRET = 7;
		
		boolean encertat = false;
		
		while (!encertat) {
			System.out.println("Introdueix el nombre secret:");
			i = sc.nextInt();
			intents = intents + 1;
			
			if (i == NOMBRE_SECRET) {
				System.out.println("CORRECTE!");
				encertat = true;
			}else {
				System.out.println("ERROR! Nombre incorrecte!");
			}
			
			if (intents <= 3) {
				System.out.println("Torna a intentar!");
			}else {
				System.out.println("Ja no tens mÃ©s intents!");
			}
		}
		
		sc.close();

	}

}
