package NewPackage;

import java.util.Scanner;

public class Exercici4_25 {
	
	static Scanner sc = new Scanner(System.in);
	static String num;
	static int max = 0;
	static int min = 0;

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println("Entra un nombre enter de m√†xim 15 xifres:");
		num = sc.nextLine();
		
		System.out.println(max+", "+num.charAt(max));

	}
	
	public static void cercarMaxim() {
		for (int i = 0 ; i < num.length() ; i++) {
			max = num.charAt(i);
			
			if (max < num.charAt(i)+1) {
				max = num.charAt(i)+1;
			}
		}
		
	}
	
}
