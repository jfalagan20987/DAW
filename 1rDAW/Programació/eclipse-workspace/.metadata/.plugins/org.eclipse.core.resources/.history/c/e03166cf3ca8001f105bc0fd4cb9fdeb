		int opcio = 0;
		
		System.out.println("---MENÚ---");
		System.out.println("1. Ingressar diners.");
		System.out.println("2. Retirar diners.");
		System.out.println("3. Mostrar saldo.");
		System.out.println("Tria una opció (1-3):");
		
		switch (opcio) {
		
		case 1:
