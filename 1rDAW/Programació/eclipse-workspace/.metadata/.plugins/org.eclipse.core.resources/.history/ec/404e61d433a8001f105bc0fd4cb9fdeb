package PackageT5;

public class Persona {
	
	private String nom;
	private int edat;
	
	//Constructor
	public Persona() {
		System.out.println("Creant objecte...");
	}
	
	public Persona(String nom, int edat) {
		this.nom = nom;
		this.edat = edat;
	}
	
	public Persona(String nomPersona) {
		nom = nomPersona;
	}
	
	public void caminar() {
		System.out.println(nom+" est√† caminant.");
	}
	
	public void imprimirDades() {
		System.out.println("Nom: "+nom+"\n"+"Edat: "+edat);
	}
	
	public void setEdat (int edat) {
		this.edat = edat;
	}

}
